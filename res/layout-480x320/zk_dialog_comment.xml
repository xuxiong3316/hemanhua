<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zk_comment_title"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/zk_background_color"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="15.0dip"
                android:text="@string/zk_comment"
                android:textColor="#ff444444"
                android:textSize="18.0dip" />

            <EditText
                android:id="@id/comment_content_edit"
                android:layout_width="fill_parent"
                android:layout_height="120.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="16.0dip"
                android:background="#fffafafa"
                android:gravity="top"
                android:hint="请在此输入你的评论（限140字）"
                android:maxLength="140"
                android:paddingLeft="5.0dip"
                android:paddingTop="8.0dip"
                android:textColor="@color/zk_text_edit"
                android:textColorHint="@color/zk_text_hint"
                android:textSize="15.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/zk_exit_divide" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@id/comment_cancel_btn"
                    style="@style/zk_MyExitText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/zk_exit_btn_sel"
                    android:text="@string/zk_txt_btn_cancel"
                    android:textColor="@drawable/zk_exit_textcolor1_sel" />

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/zk_exit_divide" />

                <Button
                    android:id="@id/comment_sub_btn"
                    style="@style/zk_MyExitText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/zk_exit_btnok_sel"
                    android:text="@string/zk_txt_btn_confirm"
                    android:textColor="@drawable/zk_exit_textcolor_sel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>